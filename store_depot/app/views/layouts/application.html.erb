<!DOCTYPE html>
<html>
<head>
  <title>Candy Shop</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller.controller_name %>" >
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Candy Shop" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>
    
      <ul>
        <li><%= link_to "Home", store_url %></li>
        <li><%= link_to "Contact Us", contact_informations_url %></li>
        <li><%= link_to "About Us", about_us_url %></li>
        <li><%= link_to "Privacy Policy", privacy_policy_index_url %></li>
        <li><%= link_to "Terms of Service", terms_of_service_index_url %></li>
        <li><%= link_to "Shopping Cart", 
                if(session[:cart_id] != nil) then cart_url(session[:cart_id]) else carts_url end%></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>

</html>
